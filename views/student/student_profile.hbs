{{#if student.TeamId}}
{{else}}
<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_content">
      <div class="col-xs-12">
        <h1>You are currently not in a team!</h1>
        <a href="/student/team/create" class="col-md-6 col-sm-6 col-xs-12">Create a new team</a>
        <a href="/student/team/search" class="col-md-6 col-sm-6 col-xs-12">Join an existing team</a>
      </div>
    </div>
  </div>
</div>
{{/if}}

<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">

    <div class="x_title">
      <h2>Your Profile<small>User profile</small></h2>

      <ul class="nav navbar-right panel_toolbox">
        <li><a href="/student/profile/edit">Edit</a></li>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">

    <div class="col-xs-12">
      <div class="form-horizontal form-label-left">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="firstName">First Name</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <p class="form-control-hidden" style="border: 0px solid grey">{{student.firstName}}</p>
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="lastName">Last Name</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <p class="form-control-hidden">{{student.lastName}}</p>
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="phoneNumber">Phone Number</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <p class="form-control-hidden">{{student.phoneNumber}}</p>
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="skypeUsername">Skype Username</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <p class="form-control-hidden">{{student.skypeUsername}}</p>
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="typeOfStudent">Level of Study</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <p class="form-control-hidden">{{student.typeOfStudent}}</p>
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="school">School(s)</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <p class="form-control-hidden">{{studentSchools}}</p>
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="expectedYearOfGraduation">Year of Graduation</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <p class="form-control-hidden">{{student.expectedYearOfGraduation}}</p>
        </div>
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="school">Major(s)</label>
        <div class="col-md-9 col-sm-9 col-xs-12">
          <p class="form-control-hidden">{{studentMajors}}</p>
        </div>
        {{#if student.TeamId}}
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="school">Team</label>
          <div class="col-md-9 col-sm-9 col-xs-12">
            <p class="form-control-hidden"><a href="/student/team/{{student.TeamId}}">{{student.TeamId}}</a></p>
          </div>
        {{else}}
        {{/if}}
      </div>
    </div>

    </div>
  </div>
</div>
